<h2><%= @gallery.name.capitalize %></h2>
<a href= "/galleries/<%= @gallery.id %>/edit">Edit</a>

<a href= "/galleries/<%= @gallery.id %>/images/new">New Image</a>

<form action"/galleries/<% @gallery.id %>" method="POST">
	<input type="hidden" name="_method" value="DELETE">
	<input type="submit" value= "Delete">
</form>

<% @images.each do |image| %>
	<p><%= "#{image.name}: #{image.description}"%></p>
	<img src= "<%= image.url %>">
	<p> <a href= "/galleries/<%= @gallery.id %>/images/<%= image.id %>/edit">Edit Image</a> </p>
	<form action="/galleries/<%= @gallery.id %>/images/<%= image.id %>" method="POST">
	<input type="hidden" name="_method" value="DELETE">
	<input type="submit" value="Delete">
	</form>
<% end %>
 
<p> <a href= "/"> Back to Galleries </a> </p>
